# Social Media Management Bot - Environment Configuration

# Database Configuration
POSTGRES_PASSWORD=secure_password_change_me
DATABASE_URL=postgresql://postgres:secure_password_change_me@postgres:5432/socialmedia_db

# Redis Configuration  
REDIS_URL=redis://redis:6379/0

# Application Security
SECRET_KEY=super-secret-key-change-this-in-production-environment
DEBUG=false

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here-generate-with-openssl-rand-base64-32

# OAuth2 Providers (Replace with your actual credentials)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here
MICROSOFT_CLIENT_ID=your-microsoft-client-id-here
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret-here

# AI Services
OPENAI_API_KEY=your-openai-api-key-here

# Social Media Platform APIs (Configure through UI or add here)
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
YOUTUBE_API_KEY=your-youtube-api-key

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=uploads

# Email Configuration (Optional - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password