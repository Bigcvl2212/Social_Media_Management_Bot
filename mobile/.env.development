# Environment Configuration for Development
# Copy this file to .env for local development

# App Environment
NODE_ENV=development
APP_ENV=development

# API Configuration
API_BASE_URL=http://localhost:8000
API_VERSION=v1
API_TIMEOUT=30000

# Social Media Platform OAuth Credentials (Development)
# Use test/sandbox credentials for development
FACEBOOK_APP_ID=your_dev_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_dev_facebook_client_secret
INSTAGRAM_CLIENT_ID=your_dev_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_dev_instagram_client_secret

TWITTER_API_KEY=your_dev_twitter_api_key
TWITTER_API_SECRET=your_dev_twitter_api_secret
TWITTER_CLIENT_ID=your_dev_twitter_client_id
TWITTER_CLIENT_SECRET=your_dev_twitter_client_secret

LINKEDIN_CLIENT_ID=your_dev_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_dev_linkedin_client_secret

GOOGLE_CLIENT_ID=your_dev_google_client_id
GOOGLE_CLIENT_SECRET=your_dev_google_client_secret

TIKTOK_CLIENT_ID=your_dev_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_dev_tiktok_client_secret

# Firebase Configuration (Development)
FIREBASE_PROJECT_ID=your_dev_firebase_project_id
FIREBASE_MESSAGING_SENDER_ID=your_dev_sender_id
FIREBASE_APP_ID=your_dev_firebase_app_id
FIREBASE_API_KEY=your_dev_firebase_api_key

# Analytics and Monitoring (Disabled for development)
ANALYTICS_ENABLED=false
CRASH_REPORTING_ENABLED=false
PERFORMANCE_MONITORING_ENABLED=false

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true

# Security (Relaxed for development)
ENABLE_SSL_PINNING=false
ENABLE_BIOMETRIC_AUTH=false

# Debug Settings
DEBUG_MODE=true
LOG_LEVEL=debug

# Deep Link Configuration
DEEP_LINK_SCHEME=socialmediabot-dev
DEEP_LINK_HOST=dev.yourdomain.com

# Version Information
APP_VERSION=1.0.0-dev
BUILD_NUMBER=1